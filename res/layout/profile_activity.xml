		    android:textColor="@color/normalTextColor"
		    android:textStyle="bold"
		    android:textSize="@dimen/profileCharazwadTextSize"/>
		<TextView 
		    android:id="@+id/profileActivityAliasPost"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/profileActivityCharazwad"
		    android:layout_marginTop="@dimen/fromRelatedViewVMargin"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="@dimen/sideMargin"
		    android:textColor="@color/normalTextColor"
		    android:textSize="@dimen/profilePostTextSize"
		    android:textStyle="bold"/>
		<ImageButton 
		    android:id="@+id/charazaButton"
		    android:contentDescription="@string/charazaButtonContentDescription"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_alignParentBottom="true"/>
