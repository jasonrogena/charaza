		<TextView 
		    android:id="@+id/profileActivityName"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="@dimen/fromTitleVMargin"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="@dimen/sideMargin"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/normalTextColor"
		    android:textStyle="bold"
		    android:textSize="@dimen/profileNameTextSize"/>
		<ImageView 
		    android:id="@+id/profileActivityImage"
		    android:contentDescription="@string/profileActivityDescriptionContentDescription"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="@dimen/fromTitleVMargin"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="@dimen/sideMargin"
		    android:layout_width="@dimen/profileImageWidth"
