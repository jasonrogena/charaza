<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
    <ScrollView
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/ranksScrollView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true">
		<RelativeLayout 
		    android:id="@+id/ranksRelativeLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/layoutColor">
			<ProgressBar 
			    android:id="@+id/ranksProgressBar"
			    android:layout_centerInParent="true"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_gravity="center_vertical|center_horizontal"
			    android:visibility="gone"/>
			<!--  <View 
			    android:layout_width="fill_parent"
		      	android:layout_height="@dimen/activityTitleHeight"
		      	android:layout_alignParentTop="true"
		      	android:background="@color/activityTitleColor"/>
			<TextView 
				android:id="@+id/ranksTitle"
		      	android:layout_width="fill_parent"
		      	android:layout_height="@dimen/activityTitleHeight"
		      	android:layout_marginLeft="@dimen/titleTextLeftMargin"
		      	android:layout_alignParentTop="true"
		      	android:text="@string/ranksSubTitle"
		      	android:textColor="@color/activityTitleTextColor"
		      	android:textSize="@dimen/activityTitleTextSize"
		      	android:textStyle="bold"
		      	android:typeface="sans"
		      	android:gravity="center_vertical"/>
			<View 
			    android:id="@+id/ranksTitleSeperator"
			    android:layout_width="fill_parent"
			    android:layout_height="0.5dp"
			    android:background="@color/activityTitleSeperatorColor"
			    android:layout_below="@id/ranksTitle"/>
			<View 
			    android:id="@+id/ranksActivityPositioner"
			    android:layout_width="60dp"
			    android:layout_height="2dp"
			    android:background="@color/scrollerColor"
			    android:layout_below="@id/ranksTitleSeperator"
			    android:visibility="gone"/>-->
			    
			<TableLayout 
			    android:id="@+id/ranksTableLayout"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:stretchColumns="0"
			    android:layout_alignParentTop="true" >
			    <TableRow 
			        android:layout_height="36dp"
			        android:layout_width="fill_parent">
			        <TextView 
			            android:id="@+id/nameHeading"
			            android:layout_width="wrap_content"
			            android:layout_height="36dp"
			            android:gravity="center_vertical"
			            android:layout_marginLeft="4dp"
			            android:textSize="15dp"
			            android:textStyle="bold"
			            android:textColor="@color/normalTextColor"
			            android:text="@string/nameHeadingText"/>
			        <View 
			            android:id="@+id/ranksTableHeadingSeparator"
			            android:layout_width="1dp"
			            android:layout_height="36dp"
			            android:background="@color/tableSeparatorColor"/>
			        <TextView 
			            android:id="@+id/charazwadHeading"
			            android:layout_width="wrap_content"
			            android:layout_height="36dp"
			            android:gravity="center_vertical"
			            android:layout_marginLeft="3dp"
			            android:layout_marginRight="4dp"
			            android:textSize="15dp"
			            android:textStyle="bold"
			            android:textColor="@color/normalTextColor"
			            android:text="@string/charazwadHeadingText"/>
			    </TableRow>
			    <TableRow 
			        android:layout_width="fill_parent"
			        android:layout_height="4dp" >
			        <View 
			            android:layout_height="1dp"
			            android:layout_width="fill_parent"
			            android:background="@color/tableSeparatorColor"
			            android:layout_span="3"/>
			    </TableRow>
			</TableLayout>
		</RelativeLayout>
	</ScrollView>
	<com.devspark.sidenavigation.SideNavigationView
		        android:id="@+id/side_navigation_view_ranks"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" />
</RelativeLayout>